<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Engage360d\Bundle\SecurityBundle\Entity\User\User">

        <field name="firstname" column="firstname" type="string" length="255" nullable="true" />

        <field name="lastname" column="lastname" type="string" length="255" nullable="true" />

        <field name="facebookId" column="facebook_id" type="string" length="255" nullable="true" />

    </mapped-superclass>

</doctrine-mapping>
